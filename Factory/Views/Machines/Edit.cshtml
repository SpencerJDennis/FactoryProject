@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>EDIT</h1>

<h4>You are going to edit the information of Machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.MachineName)
  @Html.EditorFor(model => model.MachineName)

  @Html.LabelFor(model => model.MachineDetails)
  @Html.EditorFor(model => model.MachineDetails)

  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Return to Machine Home", "Index")</p>