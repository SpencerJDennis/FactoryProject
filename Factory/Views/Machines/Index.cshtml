@{
	Layout = "_Layout";
}

@using Factory.Models;

<h3>All Machines</h3>

@if (Model.Count == 0)
{
	<p>No Machines added yet</p>
}

<ul>
	@foreach (Machine machine in Model)
	{
		<li>@Html.ActionLink($"{machine.Name}", "Details", new { id = patient.PatientId})</li>
	}
</ul>

<p>@Html.ActionLink("Create a new Machine Profile", "Create")</p>
<p>@Html.ActionLink("Create an Engineer Profile", "Create", "Engineers")</p>
<p>@Html.ActionLink("See All Engineers", "Index", "Engineers")</p>
