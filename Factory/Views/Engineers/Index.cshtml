@{
	Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;
<h2>All Engineers:</h2>

@if (Model.Count == 0)
{
	<p>No Engineers have bee added yet:(</p>
}

<ul>
@foreach (Engineer engineer in Model)
{
	<li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new {id = engineer.EngineerId})</li>
}
</ul>

<p>@Html.ActionLink("Add an Engineer", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>